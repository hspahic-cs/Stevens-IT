
(* Example 2 *)

let n_left = { data <= 12; left <= 0; right <= 0}    (* 0 in head signals null *)
in let n_right = { data <= 44; left <= 0; right <= 0}
in let n_root = { data <= 33; left <= n_left ; right <= n_right }
in let t1 = { root <= n_root ; size <= 3} 
in letrec size_bt_helper(node) = 
   	      if number?(node)
	      then 0
	      else 1 + (size_bt_helper node.left) + (size_bt_helper node.right)
in let size_bt = proc (t) { (size_bt_helper t.root) }
in (size_bt t1)
   